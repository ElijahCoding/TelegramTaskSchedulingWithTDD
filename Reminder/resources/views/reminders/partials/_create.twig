<div class="row">
  <div class="col-md-3">
    <div class="form-group">
      <label for="body">Reminder Name:</label>
      <input type="text" name="body" class="form-control">
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group">
      <label for="frequency">Frequency:</label>
      <select id="frequency" name="frequency" class="form-control">
        {% for value, frequency in date.frequencies %}
          <option value="{{ value }}">{{ frequency }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="col-md-2">
    <div class="form-group">
      <label for="day">Day:</label>
      <select id="day" name="day" class="form-control">
        {% for value, frequency in date.days %}
          <option value="{{ value }}">{{ frequency }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="col-md-2">
    <div class="form-group">
      <label for="date">Date:</label>
      <select id="date" name="date" class="form-control">
        {% for x in 1..31 %}
          <option value="{{ x }}">{{ date.ordinal(x) }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="col-md-2">
            <div class="form-group">
                <label for="time">Time</label>
                <select name="time" id="time" class="form-control">
                    {% for time in date.range('00:00', '24:00') %}
                        <option value="{{ time.format('H:i') }}">{{ time.format('H:i') }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
</div>
